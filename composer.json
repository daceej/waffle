{
    "name": "waffle-ops/waffle",
    "description": "A tool to prevent waffling!",
    "type": "project",
    "authors": [
        {
            "name": "Curtis Ogle",
            "email": "curtis.jams.ogle@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "ext-json": "*",
        "consolidation/self-update": "^1.2",
        "symfony/config": "^5.2",
        "symfony/console": "^5.2",
        "symfony/dependency-injection": "^5.2",
        "symfony/finder": "^5.2",
        "symfony/process": "^5.2",
        "symfony/yaml": "^5.2"
    },
    "bin": [
        "bin/waffle",
        "bin/wfl"
    ],
    "autoload": {
        "psr-4": {
            "Waffle\\": "src"
        },
        "classmap": [
            "src"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Waffle\\Tests\\": "tests"
        },
        "classmap": [
            "tests"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/test-pack": "^1.0",
        "vimeo/psalm": "^4.8"
    },
    "config": {
        "sort-packages": true
    }
}
